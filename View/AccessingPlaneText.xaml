<UserControl x:Class="DailyCheck.View.AccessingPlaneText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DailyCheck.View"
             mc:Ignorable="d" 
             MinHeight="30"
             d:DesignWidth="300">
    <Grid x:Name="MainGrid" Margin="2,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
               x:Name="TextHolder"
               d:Text="This is a test message. Its length may vary from one-two to the nearly infinite value."
               TextWrapping="Wrap"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="4,0,0,0"
               FontWeight="Regular"
               FontSize="14"
               Foreground="White"/>
    </Grid>
</UserControl>
